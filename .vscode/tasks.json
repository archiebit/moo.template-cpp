{
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "Build project",
            "type":  "shell",
            "group": "build",
            "windows":
            {
                "command": "cook",
                "args":    "${command:cpptools.activeConfigName}"
            },
            "presentation":
            {
                "panel":  "shared",
                "reveal": "always",

                "focus":             true,
                "clear":             true,
                "echo":              true,
                "close":            false,
                "showReuseMessage": false
            },
            "icon":
            {
                "id": "combine"
            },
            "problemMatcher": []
        },
        {
            "label": "Clear configuration output",
            "type":  "shell",
            "group": "none",
            "windows":
            {
                "command": "if exist \"out\\${command:cpptools.activeConfigName}\" rd /S /Q \"out\\${command:cpptools.activeConfigName}\""
            },
            "presentation":
            {
                "panel":  "shared",
                "reveal": "never",

                "focus":            false,
                "clear":            false,
                "echo":             false,
                "close":            false,
                "showReuseMessage": false
            },
            "icon":
            {
                "id": "trash"
            },
            "problemMatcher": []
        }
    ]
}